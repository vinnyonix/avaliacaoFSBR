@model AvaliacaoMVCValnei.App.ViewModels.ProcessViewModel

@{
    ViewData["Title"] = "Criar Processo";
}

<h1>Criar Processo</h1>

<h4>Preecha as informações do novo processo.</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProcessModel!.Name" class="control-label"></label>
                <input asp-for="ProcessModel!.Name" class="form-control" />
                <span asp-validation-for="ProcessModel!.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessModel!.NPU" class="control-label"></label>
                <input asp-for="ProcessModel!.NPU" class="form-control npu" data-mask="0000000-00-0000-0-00-0000" />
                <span asp-validation-for="ProcessModel!.NPU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessModel!.CreateAt" class="control-label"></label>
                <input asp-for="ProcessModel!.CreateAt" class="form-control" />
                <span asp-validation-for="ProcessModel!.CreateAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessModel!.ViewedAt" class="control-label"></label>
                <input asp-for="ProcessModel!.ViewedAt" class="form-control" />
                <span asp-validation-for="ProcessModel!.ViewedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessModel!.Municipality" class="control-label"></label>
                <select asp-for="ProcessModel!.FederativeUnitIdSelected" asp-items="@Model.Locations" class="form-control"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


